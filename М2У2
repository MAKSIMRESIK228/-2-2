# –ö–æ–º–∞–Ω–¥–∞ /start
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "–ù–∞–ø–∏—à–∏—Ç–µ, —á—Ç–æ –≤—ã —Ö–æ—Ç–∏—Ç–µ –≤—ã–±—Ä–æ—Å–∏—Ç—å (–Ω–∞–ø—Ä–∏–º–µ—Ä, '–±—É–º–∞–≥–∞', '–±—É—Ç—ã–ª–∫–∞', '–µ–¥–∞','–º–µ—Ç–∞–ª–ª', '–ª–∞–º–ø–æ—á–∫–∞', '—Å—Ç–µ–∫–ª–æ', '–ø–∞–∫–µ—Ç').")

# –ö–æ–º–∞–Ω–¥–∞ /help
@bot.message_handler(commands=['help'])
def send_help(message):
    help_text = (
        "–ö–æ–º–∞–Ω–¥—ã –±–æ—Ç–∞:\n"
        "üëã /start - –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ\n"
        "‚ôªÔ∏è /sort - –ø–æ–º–æ—â—å —Å —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–æ–π –æ—Ç—Ö–æ–¥–æ–≤\n"
        "üå± /decomp - –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –≤—Ä–µ–º–µ–Ω–∏ —Ä–∞–∑–ª–æ–∂–µ–Ω–∏—è –ø—Ä–µ–¥–º–µ—Ç–æ–≤\n"
        " /instructions –ù–∞–ø–∏—à–∏—Ç–µ –ø—Ä–µ–¥–º–µ—Ç, —á—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å, –∫—É–¥–∞ –µ–≥–æ –≤—ã–±—Ä–æ—Å–∏—Ç—å\n"
        "/protect —Å–æ–≤–µ—Ç—ã –∫–∞–∫ –º–æ–∂–Ω–æ –∑–∞—â–∏—Ç–∏—Ç—å –ø—Ä–∏—Ä–æ–¥—É\n"
        "‚ùì –ù–∞–ø–∏—à–∏—Ç–µ –ø—Ä–µ–¥–º–µ—Ç, —á—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å, –∫—É–¥–∞ –µ–≥–æ –≤—ã–±—Ä–æ—Å–∏—Ç—å."
    )
    bot.reply_to(message, help_text)
# –ö–æ–º–∞–Ω–¥–∞ /instructions
@bot.message_handler(commands=['instructions'])
def send_instructions(message):
    instructions_text = (
        "üìã **–ò–Ω—Å—Ç—Ä—É–∫—Ü–∏—è –ø–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—é –±–æ—Ç–∞:**\n"
        "1. –í–≤–µ–¥–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É **/start**, —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å –æ–±—â–µ–Ω–∏–µ —Å –±–æ—Ç–æ–º.\n"
        "2. –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ **/help**, —á—Ç–æ–±—ã —É–≤–∏–¥–µ—Ç—å —Å–ø–∏—Å–æ–∫ –≤—Å–µ—Ö –¥–æ—Å—Ç—É–ø–Ω—ã—Ö –∫–æ–º–∞–Ω–¥.\n"
        "3. –ß—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å, –∫–∞–∫ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –æ—Ç—Ö–æ–¥—ã, –≤–≤–µ–¥–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É **/sort** –∏ –Ω–∞–ø–∏—à–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, '–±—É–º–∞–≥–∞', '–±—É—Ç—ã–ª–∫–∞', '–µ–¥–∞').\n"
        "4. –ï—Å–ª–∏ —Ö–æ—Ç–∏—Ç–µ —É–∑–Ω–∞—Ç—å, —Å–∫–æ–ª—å–∫–æ —Ä–∞–∑–ª–∞–≥–∞–µ—Ç—Å—è –æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω—ã–π –ø—Ä–µ–¥–º–µ—Ç, –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–æ–º–∞–Ω–¥—É **/decomp** –∏ —É–∫–∞–∂–∏—Ç–µ –µ–≥–æ –Ω–∞–∑–≤–∞–Ω–∏–µ (–Ω–∞–ø—Ä–∏–º–µ—Ä, '–ø–∞–∫–µ—Ç', '—Å—Ç–µ–∫–ª–æ').\n"
        "5. –ï—Å–ª–∏ –≤—ã –≤–≤–µ–¥—ë—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ –Ω–∞–ø—Ä—è–º—É—é, –±–æ—Ç –ø–æ–¥—Å–∫–∞–∂–µ—Ç, –∫—É–¥–∞ –µ–≥–æ –≤—ã–±—Ä–æ—Å–∏—Ç—å –∏–ª–∏ –ø–µ—Ä–µ—Ä–∞–±–æ—Ç–∞—Ç—å.\n\n"
        "üí° **–ü—Ä–∏–º–µ—á–∞–Ω–∏–µ:** –ë–æ—Ç –ø–æ–Ω–∏–º–∞–µ—Ç —Ç–æ–ª—å–∫–æ –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã–µ —Å–ª–æ–≤–∞, —Ç–∞–∫–∏–µ –∫–∞–∫ '–µ–¥–∞', '–±—É–º–∞–≥–∞', '–ª–∞–º–ø–æ—á–∫–∞', –∏ —Ç.–¥."
    )
    bot.reply_to(message, instructions_text, parse_mode='Markdown')
# –ö–æ–º–∞–Ω–¥–∞ /sort
@bot.message_handler(commands=['sort'])
def sort_waste(message):
    bot.reply_to(message, "–ù–∞–ø–∏—à–∏—Ç–µ, —á—Ç–æ –≤—ã —Ö–æ—Ç–∏—Ç–µ –≤—ã–±—Ä–æ—Å–∏—Ç—å (–Ω–∞–ø—Ä–∏–º–µ—Ä, '–±—É–º–∞–≥–∞', '–±—É—Ç—ã–ª–∫–∞', '–µ–¥–∞').")

# –ö–æ–º–∞–Ω–¥–∞ /decomp
@bot.message_handler(commands=['decomp'])
def decomp_info(message):
    bot.reply_to(message, "–ù–∞–ø–∏—à–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞, –∏ —è —Ä–∞—Å—Å–∫–∞–∂—É, —Å–∫–æ–ª—å–∫–æ –æ–Ω —Ä–∞–∑–ª–∞–≥–∞–µ—Ç—Å—è.")
@bot.message_handler(commands=['protect'])
def protect_nature(message):
    tips = (
        "üå± –°–æ–≤–µ—Ç—ã –ø–æ –∑–∞—â–∏—Ç–µ –ø—Ä–∏—Ä–æ–¥—ã:\n"
        "1. –°–æ—Ä—Ç–∏—Ä—É–π—Ç–µ –æ—Ç—Ö–æ–¥—ã: –ø–µ—Ä–µ—Ä–∞–±–∞—Ç—ã–≤–∞–π—Ç–µ —Å—Ç–µ–∫–ª–æ, –ø–ª–∞—Å—Ç–∏–∫, –±—É–º–∞–≥—É –∏ –º–µ—Ç–∞–ª–ª.\n"
        "2. –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –º–Ω–æ–≥–æ—Ä–∞–∑–æ–≤—ã–µ —Å—É–º–∫–∏ –∏ –±—É—Ç—ã–ª–∫–∏, —á—Ç–æ–±—ã —É–º–µ–Ω—å—à–∏—Ç—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –ø–ª–∞—Å—Ç–∏–∫–∞.\n"
        "3. –ù–µ –≤—ã–±—Ä–∞—Å—ã–≤–∞–π—Ç–µ –±–∞—Ç–∞—Ä–µ–π–∫–∏ –∏ –ª–∞–º–ø–æ—á–∫–∏ –≤ –æ–±—ã—á–Ω—ã–π –º—É—Å–æ—Ä ‚Äî —Å–¥–∞–≤–∞–π—Ç–µ –∏—Ö –≤ —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã.\n"
        "4. –≠–∫–æ–Ω–æ–º—å—Ç–µ –≤–æ–¥—É –∏ —ç–ª–µ–∫—Ç—Ä–æ—ç–Ω–µ—Ä–≥–∏—é –≤ –ø–æ–≤—Å–µ–¥–Ω–µ–≤–Ω–æ–π –∂–∏–∑–Ω–∏.\n"
        "5. –ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞–π—Ç–µ —á–∏—Å—Ç–æ—Ç—É –≤ –æ–±—â–µ—Å—Ç–≤–µ–Ω–Ω—ã—Ö –º–µ—Å—Ç–∞—Ö: —É–±–∏—Ä–∞–π—Ç–µ –∑–∞ —Å–æ–±–æ–π –º—É—Å–æ—Ä.\n"
        "6. –ü–æ–¥—Å–∞–∂–∏–≤–∞–π—Ç–µ –¥–µ—Ä–µ–≤—å—è –∏ —É—Ö–∞–∂–∏–≤–∞–π—Ç–µ –∑–∞ —Ä–∞—Å—Ç–µ–Ω–∏—è–º–∏.\n"
        "7. –°—Ç–∞—Ä–∞–π—Ç–µ—Å—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —ç–∫–æ–ª–æ–≥–∏—á–µ—Å–∫–∏ —á–∏—Å—Ç—ã–µ —Å—Ä–µ–¥—Å—Ç–≤–∞ –∏ –ø—Ä–æ–¥—É–∫—Ç—ã.\n"
        "8. –ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞–π—Ç–µ –±–ª–∞–≥–æ—Ç–≤–æ—Ä–∏—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–µ–∫—Ç—ã –ø–æ –∑–∞—â–∏—Ç–µ –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã.\n"
        "üåç –ú–∞–ª–µ–Ω—å–∫–∏–µ —à–∞–≥–∏ –º–æ–≥—É—Ç –ø—Ä–∏–≤–µ—Å—Ç–∏ –∫ –±–æ–ª—å—à–∏–º –∏–∑–º–µ–Ω–µ–Ω–∏—è–º!"
    )
    bot.reply_to(message, tips)
# –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
@bot.message_handler(func=lambda message: True)
def check_item(message):
    item = message.text.lower()
    if item in waste_sorting:
        bot.reply_to(message, waste_sorting[item])
    elif item in decomposition_time:
        bot.reply_to(message, decomposition_time[item])
    else:
        bot.reply_to(message, "ü§î –Ø –Ω–µ –∑–Ω–∞—é, –∫–∞–∫ –ø–æ—Å—Ç—É–ø–∏—Ç—å —Å —ç—Ç–∏–º –ø—Ä–µ–¥–º–µ—Ç–æ–º. –ù–∞–ø–∏—à–∏—Ç–µ —á—Ç–æ-—Ç–æ –¥—Ä—É–≥–æ–µ –∏–ª–∏ —Å–¥–∞–π—Ç–µ –≤ –æ–±—â–∏–µ –æ—Ç—Ö–æ–¥—ã.")

# –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞
bot.polling()
